{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Depurar Projeto Protocolo",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/protocolo_teste.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build_protocolo_fsm"
        }
    ]
}